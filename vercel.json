{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime":"edge",
        "regions":["iad1","gru1","hnd1"]
      }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static",
      "config": {
        "headers": [
          {
            "source": "**/*.@(js|css|jpg|jpeg|png|svg|gif|ico)",
            "headers": [
              {
                "key": "Cache-Control",
                "value": "public, max-age=31536000"
              }
            ]
          }
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/s/(.*)",
      "dest": "frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "backend/main.py"
    }
  ]
}
